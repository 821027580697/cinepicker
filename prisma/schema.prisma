// Prisma 스키마 정의
//
// CinePickr 데이터베이스 모델을 정의합니다.
// - NextAuth.js 인증 모델 (User, Account, Session, VerificationToken)
// - 리뷰 시스템 (Review, ReviewLike)
// - 보고싶다 목록 (Watchlist)
//
// @see https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==============================
// NextAuth.js 인증 모델
// ==============================

// OAuth 계정 연동 정보 (Google, Kakao 등)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// 데이터베이스 세션 정보
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// 사용자 모델 (소셜 로그인 기반)
model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  name          String?
  image         String?
  emailVerified DateTime?

  // 인증 관계
  accounts Account[]
  sessions Session[]

  // 리뷰 관계
  reviews     Review[]
  reviewLikes ReviewLike[]

  // 보고싶다 목록
  watchlist Watchlist[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 이메일 인증 토큰
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==============================
// 리뷰 시스템 모델
// ==============================

// 콘텐츠 리뷰 (영화/TV에 대한 유저 리뷰)
model Review {
  id          String  @id @default(cuid())
  userId      String
  contentId   Int     // TMDB 콘텐츠 ID
  contentType String  // "movie" 또는 "tv"
  rating      Float   // 1.0 ~ 5.0 (0.5 단위)
  title       String  @db.VarChar(100)  // 한줄평 (최대 100자)
  content     String  @db.VarChar(1000) // 상세 리뷰 (최대 1000자)
  spoiler     Boolean @default(false)   // 스포일러 포함 여부

  // 관계 설정
  user  User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  likes ReviewLike[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 동일 유저가 동일 콘텐츠에 중복 리뷰 방지
  @@unique([userId, contentId, contentType])
  // 콘텐츠별 리뷰 조회 성능을 위한 인덱스
  @@index([contentId, contentType])
}

// 리뷰 좋아요 (유저 1명당 리뷰 1개에 1번만 가능)
model ReviewLike {
  id       String @id @default(cuid())
  userId   String
  reviewId String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  review Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  // 동일 유저가 동일 리뷰에 중복 좋아요 방지
  @@unique([userId, reviewId])
  // 리뷰별 좋아요 수 조회 성능을 위한 인덱스
  @@index([reviewId])
}

// ==============================
// 보고싶다 목록 모델
// ==============================

// 보고싶다 (유저가 관심 콘텐츠를 저장)
model Watchlist {
  id          String @id @default(cuid())
  userId      String
  contentId   Int    // TMDB 콘텐츠 ID
  contentType String // "movie" 또는 "tv"

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  // 동일 유저가 동일 콘텐츠에 중복 추가 방지
  @@unique([userId, contentId, contentType])
  // 유저별 보고싶다 목록 조회 성능을 위한 인덱스
  @@index([userId])
}
